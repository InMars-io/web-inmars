{
  "name": "inmars-web-components",
  "author": "Mars Gotta <me@marsgotta.com> (http://www.marsgotta.com)",
  "license": "MIT",
  "repository": "https://github.com/inmars-io/web-inmars.git",
  "private": true,
  "workspaces": [
    "packages/**/*"
  ],
  "scripts": {
    "analyze": "cem analyze --litelement",
    "lint": "eslint --ext .ts,.html . --ignore-path .gitignore && prettier \"**/*.ts\" --check --ignore-path .gitignore",
    "format": "eslint --ext .ts,.html . --fix --ignore-path .gitignore && prettier \"**/*.ts\" --write --ignore-path .gitignore",
    "test": "tsc && wtr --coverage",
    "test:watch": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wtr --watch\"",
    "storybook": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wds -c .storybook/server.mjs\"",
    "storybook:build": "tsc && build-storybook",
    "build": "rimraf dist && tsc ",
    "start:build": "npm run build && web-dev-server --root-dir dist --app-index index.html --open --compatibility none",
    "start": "tsc && concurrently -k -r \"tsc --watch --preserveWatchOutput\" \"wds\"",
    "clean": "rimraf node_modules && rimraf yarn.lock && lerna clean",
    "bootstrap": "yarn install && lerna bootstrap",
    "build:svg": "node ./scripts/svg-to-object/index.js -s \" assets/svg/**/**.svg \""
  },
  "devDependencies": {
    "@custom-elements-manifest/analyzer": "^0.4.0",
    "@open-wc/building-rollup": "^2.0.0",
    "@open-wc/eslint-config": "^4.0.0",
    "@open-wc/testing": "next",
    "@typescript-eslint/eslint-plugin": "^4.0.0",
    "@typescript-eslint/parser": "^4.0.0",
    "@web/dev-server": "^0.1.34",
    "@web/dev-server-storybook": "^0.5.4",
    "@web/test-runner": "^0.14.0",
    "concurrently": "^5.0.0",
    "deepmerge": "^4.0.0",
    "eslint": "^7.0.0",
    "eslint-config-prettier": "^8.0.0",
    "husky": "^4.0.0",
    "lerna": "^5.0.0",
    "lint-staged": "^10.0.0",
    "prettier": "^2.0.0",
    "rimraf": "^3.0.0",
    "rollup": "^2.0.0",
    "tslib": "^2.0.0",
    "typescript": "^4.0.0"
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "extends": [
      "@open-wc/eslint-config",
      "eslint-config-prettier"
    ],
    "plugins": [
      "@typescript-eslint"
    ],
    "rules": {
      "no-unused-vars": "off",
      "@typescript-eslint/no-unused-vars": [
        "error"
      ],
      "import/no-unresolved": "off",
      "import/extensions": [
        "error",
        "always",
        {
          "ignorePackages": true
        }
      ]
    }
  },
  "prettier": {
    "singleQuote": true,
    "arrowParens": "avoid"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
